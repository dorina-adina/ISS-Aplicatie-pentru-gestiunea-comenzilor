<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.UpdateCommandController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <children>
        <Label text="ID Comanda:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="commandId" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Sectie:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="commandSection" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Data Comanda:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="commandDate" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Produse:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="commandProducts" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Cantitati:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="commandQuantities" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Status:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="commandStatus" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Button text="Update Command" onAction="#handleUpdateCommand" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
    </children>
</GridPane>
